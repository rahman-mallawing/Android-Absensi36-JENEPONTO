<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_identity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#00574B"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/img_identity"
        android:layout_toRightOf="@+id/img_identity"
        android:text="tvEmailSender"
        android:textSize="16sp"
        android:maxLength="20"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_ni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_identity"
        android:layout_toRightOf="@+id/img_identity"
        android:text="tv_hadir"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_urutan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="tvEmailTime" />

    <TextView
        android:id="@+id/tv_sts_hadir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_urutan"
        android:padding="5dp"
        android:background="@drawable/square_drawable"
        android:text="TAK"
        android:textColor="@android:color/holo_red_dark"/>





</RelativeLayout>